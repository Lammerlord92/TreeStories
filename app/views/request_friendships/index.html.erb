<p id="notice"><%= notice %></p>

<h1>Listing Request Friendships</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_friendships.each do |request_friendship| %>
      <tr>
        <td><%= link_to 'Show', request_friendship %></td>
        <td><%= link_to 'Edit', edit_request_friendship_path(request_friendship) %></td>
        <td><%= link_to 'Destroy', request_friendship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

